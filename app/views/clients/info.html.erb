<%= content_for(:page){ @client.name } %>

<div class="tabs is-toggle is-fullwidth">
  <ul>
    <li>
      <%= link_to combo_client_path(@client, @combo, :pronto) do %>
        <span>Pronto Consultórios</span>
      <% end %>
    </li>
    <li>
      <%= link_to combo_client_path(@client, @combo, :density) do %>
        <span>Density</span>
      <% end %>
    </li>
    <li class="is-active">
      <%= link_to info_client_path(@client, @combo) do %>
        <span>Informações Adicionais</span>
      <% end %>
    </li>
  </ul>
</div>

<div class="columns is-centered resource">
  <div class="column">
    <div class="card">
      <div class="card-content is-3">
        <%= render 'form', client: @client %>
      </div>
    </div>
  </div>
</div>
