
<div class="is-relative nested-fields" data-controller="doctor">
  <div class="form-group row">
    <div class="col-lg-12">
      <span class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">
        Medico
      </span>
      <%= link_to_remove_association('Remover Medico', f,  class: 'btn btn-danger btn-sm mr-3 pull-right')%>
    </div>           
  </div>
  <div class="form-group row">
    <div class="col-lg-5 col-md-5">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control form-control-solid',  required: true %>    
    </div>
    <div class="col-lg-3 col-md-2">
      <%= f.label :document %>
      <%= f.text_field :document, class: 'form-control form-control-solid', required: true %>      
    </div>
    <div class="col-lg-2 col-md-2">  
      <label>Dt. Nasci.</label>
      <div class="input-group">
        <input class="form-control" formControlName="doctor_birthday" 
        ngbDatepicker #dtBirthday="ngbDatepicker">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" (click)="dtBirthday.toggle()" type="button">
            <i class="fa fa-calendar"></i>
          </button>
        </div>
      </div>           
    </div>
    <div class="col-lg-2 col-md-2">
      <%= f.label :crm %>
      <%= f.text_field  :crm, class: 'form-control form-control-solid', required: true  %>     
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-3 col-md-3">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control form-control-solid', required: true  %>   
    </div>
    <div class="col-lg-3 col-md-3">
      <%= f.label :phone %>
      <div class="input-group">
        <input type="text" class="form-control" [ngClass]="applyCssErrorToArray('doctors','doctor_phone', i )" formControlName="doctor_phone" mask="(00) 0000-0000"  >
        <div class="input-group-append">
          <span class="input-group-text">
            <i class="fa fa-phone"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-3">
      <label>Celular</label>
      <div class="input-group">
        <%= f.text_field :phone, class: 'form-control' %>
        <div class="input-group-append">
          <span class="input-group-text">
            <i class="material-icons">phone</i>
          </span>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-3">
      <label>Especialidade</label>
      <select class="form-control" name="due_at" [ngClass]="applyCssErrorToArray('doctors','doctor_speciality', i )" formControlName="doctor_speciality">
        <option value="01">Oftalmo</option>
        <option value="02">Cardiologista</option>
      </select>
    </div>
  </div> 
</div>
