<div class="row">
  <div class="col-lg-3 col-md-3">
    <div class="form-group">
      <%= f.label :name, 'Nome/Razão Social' %>
      <%= f.text_field  :name, class: 'form-control form-control-solid', required: true %> 
    </div>       
  </div>
  <div class="col-lg-3 col-md-3">
    <div class="form-group">
      <%= f.label :email, 'Email' %>
      <%= f.text_field  :email, class: 'form-control form-control-solid', required: true%>           
    </div>
  </div>
  <div class="col-lg-3 col-md-3">
    <label>Tipo</label><br />
    <% @kind.each do |k| %>
      <%= f.radio_button :kind, k.id, class: 'form-check-input', data: { action: "click->contract#kind_people" } %>
      <%= f.label k.description, class: 'form-check-label' %>
    <% end %>                
  </div>
  <div class="col-lg-3 col-md-3">
    <%= f.label :document, 'CPF', class: 'cpf' %>
    <%= f.label :document, 'CNPJ', class: 'cnpj' %>
    <%= f.text_field  :document, class: 'form-control form-control-solid', data: { field: 'document' }, autocomplete: "off"%>
  </div>
</div>

<div class="separator separator-dashed my-10"></div>

<div class="form-group row">
  <div class="col-lg-3 col-md-3">
    <%= f.label :zipcode, 'Cep' %>
     <%= f.text_field  :zipcode, class: 'form-control form-control-solid', required: true %>
  </div>
  <div class="col-lg-3 col-md-3">
    <%= f.label :address, 'Rua' %>
    <%= f.text_field  :street,  class: 'form-control form-control-solid', required: true %>  
  </div>
  <div class="col-lg-2 col-md-2">
    <%= f.label :number, 'Número' %>
    <%= f.text_field  :number, class: 'form-control form-control-solid', required: true %>   
  </div>
  <div class="col-lg-4 col-md-4">
    <%= f.label :complement, 'Complemento' %>
    <%= f.text_field  :complement, class: 'form-control form-control-solid' %>
  </div>
</div>
<div class="form-group row">
  <div class="col-lg-3 col-md-3">
    <%= f.label :neighborhood, 'Bairro' %>
    <%= f.text_field  :neighborhood, class: 'form-control form-control-solid', required: true %>
  </div>
  <div class="col-lg-9 col-md-9">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <%= f.label :state, 'Estado'%>
        <select class="form-control" (change)="onChangeState($event.target)" formControlName="state_id">
          <option value="00">Selecione uma Estado</option>
          <option *ngFor="let state of states" [value]="state.id">{{ state.name }}</option>               
        </select>
      </div>
      <div class="col-lg-4 col-md-4">
        <%= f.label :state, 'Estado'%>
        <select class="form-control" formControlName="city_id">
          <option value="01">Selecione uma Cidade</option>
          <option *ngFor="let city of cities" [value]="city.id">{{ city.name }}</option>    
        </select>
      </div>
    </div>
  </div>       
</div>

<p class="bg-primary text-white py-2 px-4">Medicos</p>

<!-- PROFISSIONAIS -->
<div id="doctors" class="col-md-12">
  <%= f.fields_for :doctors do |doctor_fields| %>
    <%= render partial: "contracts/doctor_fields", locals: {f: doctor_fields} %>
  <% end %>

  <div class="form-group row">
    <div class="col-lg-12 col-md-12">
      <%= link_to_add_association('[Adicionar Medicos]',f, :doctors, class: 'btn btn-success btn-sm mr-3 pull-right') %>
    </div>
  </div>
</div>
