<div class="">
  <h2>ALTERAR SENHA</h2>
</div>
<br>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <div class="is-relative">
      <%= f.password_field :password, class: 'input', placeholder: 'Nova Senha', autofocus: true, autocomplete: "new-password" %>
      <a class="magic-eye" onclick="reveal()">
        <i class="material-icons js-eye">visibility</i>
      </a>
    </div>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, class: 'input', placeholder: 'Confirme a nova senha', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Alterar Senha", class: 'button is-fullwidth is-medium is-primary' %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
