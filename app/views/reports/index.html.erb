<div class="reports-graph">
  <%= render partial:'reports_graph', locals: { per_unit: @per_unit, per_office: @per_office}%>
</div>

<script>
   $("#selected_unit").change(function(){    
    let params = $(this).children(":selected").val();
    $.ajax({
      url: `/change_office_graph/${params}`,      
    }) 
  });
</script>
