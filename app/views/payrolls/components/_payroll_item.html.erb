<div class="card card-custom">
  <div class="card-header">
    <h3 class="card-title">Contas</h3>
    <div class="card-toolbar">
      <div class="justify-content-center">
        <%= link_to root_path, class:"col-lg-1 shipping_file", :remote => true do %>      
          <i class="material-icons">get_app</i>    
        <% end %>   
        <%= link_to root_path, class:"col-lg-1", :remote => true do %>         
          <i class="material-icons">cached</i>                
        <% end %>   
        <%= link_to export_to_exel_path(format: :xlsx), class:"col-lg-1" do %>
          <i class="material-icons">file_present</i>   
        <% end %>    
      </div>
    </div>
  </div>
  <div class="card-body" data-controller="payroll">
    <div class="datatable datatable-bordered datatable-head-custom datatable-default datatable-primary datatable-subtable
      datatable-loaded">
      <table class="datatable-table" style="display: block;">
        <thead class="datatable-head">
          <tr class="datatable-row">
            <th class="datatable-cell datatable-cell-sort" style="width:10px;">
              <span></span>
            </th>
            <th class="datatable-cell-center datatable-cell datatable-cell-check" style="width:30px;">
              <span style="margin-left: 5px;">
                <label class="checkbox checkbox-single checkbox-all">
                  <input type="checkbox" class="chk_all">&nbsp;
                  <span></span>
                </label>
              </span>
            </th>       
            <th class="datatable-cell datatable-cell-sort text-left" style="width:300px;">
              <span>Contrato</span>
            </th>
            <th class="datatable-cell datatable-cell-sort text-left" style="width:190px;">
              <span>Vencimento</span>
            </th>
            <th class="datatable-cell datatable-cell-sort text-left" style="width:190px;">
              <span>Valor</span>
            </th>
            <th class="datatable-cell datatable-cell-sort text-left" style="width:120px;">
              <span>Status</span>
            </th>
            <th class="datatable-cell datatable-cell-sort text-left" style="width:120px;">
              <span>Tipo</span>
            </th>
            <th class="datatable-cell datatable-cell-sort">
              <span></span>
            </th>
          </tr>
        </thead>
        <tbody class="datatable-body">
          <% @payrolls.each_with_index do |payroll, index| %>        
           <div>
            <tr class="datatable-row datatable-row datatable-row-even datatable-row-subtable-expanded">
              <td class="datatable-cell-center"  style="width:10px;">
                <a href="#" onclick="return false;" class="datatable-toggle-subtable card-toggle">
                  <i style="width: 30px;"  class="material-icons">expand_less</i>
                  <input type="hidden" name="bill_id" value="<%= index %>">
                </a>
              </td>
              <td class="datatable-cell-center datatable-cell-check" style="width:30px;"> 
                <span style="margin-left: 5px;">             
                  <label class="checkbox checkbox-single">
                    <input type="checkbox" class="checkbox chk_group" value="<%= payroll.id %>">&nbsp;
                    <span></span>
                  </label>  
                </span>            
              </td>       
              <td class="pl-0 py-8" style="width:300px;">
                <div class="d-flex align-items-center">           
                  <div>
                    <a href="#" class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg">    
                      <%= payroll.contract.client.name %><br />             
                      <span class="text-muted font-weight-bold d-block">
                        <%= payroll.contract.client.document %> 
                      </span>
                    </a>
                  </div>
                </div>
              </td>
              <td class="text-left" style="width:190px;">
                <span> <%= payroll.due_at %> </span>
              </td>
              <td class="pl-0 py-8" style="width:190px;">
                <span> <%= payroll.id %> </span>
              </td>
              <td class="pl-0 py-8" style="width:120px;">           
                <span class="label font-weight-bold label-lg  label-light-danger label-inline">Aberto</span>
              </td>
              <td class="pl-0 py-8" style="width:120px;">     
                <span class="label label-primary label-dot mr-2"></span>
                <span class="font-weight-bold text-primary"> <%= payroll.kind %> </span>               
              </td>
              <td>
                <span style="overflow: visible; position: relative; width: 125px;">
                  <a href="javascript:;" class="btn btn-sm btn-clean btn-icon mr-2">
                    <i class="fa fa-refresh fa-1x"></i>
                  </a>
                  <a href="javascript:;" class="btn btn-sm btn-clean btn-icon mr-2">
                    <i class="fa fa-print"></i>
                  </a>
                  <a href="javascript:;" class="btn btn-sm btn-clean btn-icon">
                    <i class="fa fa-arrow-circle-o-down"></i>
                  </a>
                </span>
              </td>
            </tr>
            <tr class="datatable-row-subtable  is-hidden">
              <td class="datatable-subtable" colspan="9">
                <div class="datatable datatable-default datatable-primary datatable-loaded">
                  <table class="datatable-table">
                    <thead class="datatable-head">
                      <tr class="datatable-row text-center">
                        <th class="datatable-cell" style="width:190px;">
                          <span>CÃ³digo</span>
                        </th>
                        <th class="datatable-cell" style="width:190px;">
                          <span>Periodo</span>
                        </th>
                        <th class="datatable-cell" style="width:190px;">
                          <span>Unidade</span>
                        </th>
                        <th class="datatable-cell" style="width:120px;">
                          <span>Sala</span>
                        </th>
                        <th class="datatable-cell" style="width:120px;">
                          <span>Horas</span>
                        </th>
                        <th class="datatable-cell" style="width:120px;">
                          <span>Tipo</span>
                        </th>
                        <th class="datatable-cell" style="width:120px;">
                          <span>Valor</span>
                        </th>
                        <th class="datatable-cell"></th>
                      </tr>
                    </thead>
                    <tbody class="datatable-body">
                      <% payroll.payroll_items.each do |item| %>
                        <tr class="datatable-row text-center">
                          <td class="datatable-cell"  style="width:190px;">
                            <span><%= item.id %> </span>
                          </td>
                          <td class="datatable-cell"  style="width:190px;">
                            <span><%= item.period %> </span>
                          </td>
                          <td class="datatable-cell"  style="width:190px;">
                            <span><%= item.clinic.office.name %></span>
                          </td>
                          <td class="datatable-cell"  style="width:120px;">
                            <span><%= item.clinic.code %></span>
                          </td>
                          <td class="datatable-cell" style="width:120px;">
                            <span><%= item.hours %></span>
                          </td>
                          <td class="datatable-cell" style="width:120px;">
                           <span><%= item.odd%></span>
                          </td>
                          <td class="datatable-cell" style="width:120px;">
                            <span><%= item.amount %></span>
                          </td>
                          <td class="datatable-cell datatable-cell-sort"></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </td>
            </tr>
            </div>
          <% end %>
        </tbody>
      </table>     
    </div>
  </div>
</div>