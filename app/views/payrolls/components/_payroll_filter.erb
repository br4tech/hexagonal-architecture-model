<div class="card card-custom">
  <div class="card-header">
    <h3 class="card-title">Filtrar Contas</h3>
</div>
<div class="card-body" data-controller="payroll">
    <%= search_form_for @q do |f| %>
      <div class="form-group row">
        <div class="col-lg-2">
          <label>Tipo</label>       
          <%= f.select :contract_kind_eq, Contract.categories.map{|index, value| [index, value]}, {}, { data: { action: 'change->payroll#loadContract' }, class: 'form-control'} %>    
        </div>
        <div class="col-lg-3">
          <label>Contrato</label>
          <%= f.select :contract_id_eq, {},  {include_blank: 'Selecione um contrato'}, { data: { target: 'payroll.contract'}, class: "form-control" } %>
        </div>
        <div class="col-lg-2">
          <label>Data Inicio</label>
          <div class="input-group">
            <input type="text" class="form-control" >
            <div class="input-group-append">
              <span class="input-group-text">
                <i class="fa fa-calendar"></i>
              </span>
            </div>
          </div>
        </div>
        <div class="col-lg-2">
          <label>Data Fim</label>
          <div class="input-group">
            <input type="text" class="form-control" >
            <div class="input-group-append">
              <span class="input-group-text">
                <i class="fa fa-calendar"></i>
              </span>
            </div>
          </div>
        </div>
        <div class="col-lg-3">
          <label>Status</label>
          <div class="radio-inline">
            <label class="radio radio-solid">
              <input type="radio" name="example_1" checked="checked" value="1">
              <span></span>
              Aberto
            </label>
            <label class="radio radio-solid">
              <input type="radio" name="example_2" value="2">
              <span></span>
              Fechado
            </label>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-lg-10"></div>
        <div class="col-lg-2">
          <%= f.submit "Filtrar", class: "btn btn-primary font-weight-bold mr-2" %>        
          <button type="reset" class="btn btn-light-primary font-weight-bold">Limpar</button>
        </div>
      </div>
    <% end %>
  </div>
</div>