<%= content_for(:page){ "Off Day" } %>
<%= content_for(:top_actions) do %>
  <div class="navbar-item">
    <%= link_to new_holiday_path, class: 'button is-primary' do %>
      <span class="icon">
        <i class="material-icons">add_box</i>
      </span>
      <span>Adicionar Feriado</span>
    <% end %>
  </div>
<% end %>

<% @holidays.each do |holiday| %>
  <div class="card card-info">
    <div class="card-content">
      <div class="columns columns-data">
        <div class="column is-two-quarters-tablet is-6-widescreen">
          <div class="name">
            <h4><%= holiday.name %></h4>
          </div>
        </div>

        <div class="column is-hidden-tablet-only is-2-desktop">
          <i class="material-icons">calendar_today</i> Início <%= l(holiday.starts_at) %>
        </div>

        <div class="column is-hidden-tablet-only is-2-desktop">
          <i class="material-icons">calendar_today</i> Término <%= l(holiday.ends_at) %>
        </div> 

        <div class="column is-one-quarter-tablet is-2-desktop">
          <%= link_to 'Ver Feriado', holiday_path(holiday), class: "button is-primary is-outlined is-fullwidth is-small" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= paginate  @holidays,  outer_window: 3  %>
<%= rel_next_prev_link_tags  @holidays %>