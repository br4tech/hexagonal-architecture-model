<div>
  <%= form_with(model: holiday, local: true) do |form| %>
    <%= hidden_field_tag :origin, request.path %>
    <% if  holiday.errors.any? %>
      <%  holiday.errors.full_messages.each do |message| %>
        <div class="notification is-warning">
          <%= message %>
        </div>
      <% end %>
    <% end %>

    <h4>Dados Cadastrais</h4>

    <div class="columns">
      <div class="field column is-half">
        <%= form.label :name, class: 'label' %>
        <div class="control">
          <%= form.text_field  :name, class: 'input', data: { field: 'name' }%>
        </div>  
      </div>
      <div class="field column is-half">
        <%= form.label :color, class: 'label' %>
        <div class="control">
          <div class="minicolors minicolors-theme-bootstrap minicolors-position-bottom">
            <%= form.text_field :color, class: 'minicolors-input is-color', autocomplete: 'off'  %>
          </div>
        </div> 
      </div>
    </div>  

    <div class="columns" data-controller="attendance">
      <div class="field column is-one-fifth">
        <%= form.label :starts_at, class: 'label' %>
        <div class="control">
          <%= form.text_field :starts_at, value: formatted_date(form.object.starts_at), class: 'input is-date'%>
        </div>
      </div>
      <div class="field column is-one-fifth">
        <%= form.label :ends_at, class: 'label' %>
        <div class="control">
          <%= form.text_field :ends_at, value: formatted_date(form.object.ends_at), class: 'input is-date'%>
        </div>
      </div>
    </div>

    <div class="columns is-centered">
      <div class="field column is-half">
        <div class="columns">
          <div class="column">
            <%= link_to 'Cancelar', :back, class: 'button is-primary is-outlined is-fullwidth' %>
          </div>
          <div class="column">
            <%= form.submit 'Salvar', class: 'button is-primary is-fullwidth' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br />
<%= link_to holidays_path, class: 'is-flex is-back' do %>
  <i class="material-icons">arrow_back</i> Cancelar
<% end %>