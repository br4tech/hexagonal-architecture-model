<%= content_for(:top_actions) do %>
  <div class="navbar-item">
    <div class="control has-icons-right is-search">
      <%= search_form_for @q do |f| %>
        <%= f.collection_select :name_eq, Doctor.all, :id, :name, {}, class: "input reset" %>   
        <span class="icon is-small is-right">
          <i class="material-icons">search</i>
        </span>
      <% end %>
    </div>
  </div>
<% end %>

<div class="doctors">
  <% @doctors.each do |doctor| %>
  <div class="card card-info">
    <div class="card-content">
      <div class="columns columns-data">
        <div class="column is-two-quarters-tablet is-4-widescreen">
          <div class="name">
            <h4><%= formal_doctor_name(doctor) %></h4>
          </div>
        </div>

        <div class="column is-hidden-tablet-only is-2-desktop">
          <i class="material-icons">phone</i> <%= doctor.phone || not_supplied %>
        </div>

        <div class="column is-hidden-tablet-only is-2-desktop">
          <i class="material-icons">email</i> <%= doctor.email || not_supplied %>
        </div>

        <div class="column is-one-quarter-tablet is-2-desktop">
          <% if doctor.expertises.any? %> <i class="material-icons">favorite</i> <%= names_for(doctor.expertises) %><% end %>
        </div>

        <div class="column is-one-quarter-tablet is-2-desktop">
          <%= link_to 'Ver Perfil', doctor_path(doctor), class: "button is-primary is-outlined is-fullwidth is-small" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= paginate @doctors,  outer_window: 3  %>
<%= rel_next_prev_link_tags @doctors %>
