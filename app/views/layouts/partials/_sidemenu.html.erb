<div class="aside aside-left d-flex aside-fixed">
  <div class="aside-primary d-flex flex-column align-items-center flex-row-auto">
    <div class="aside-brand d-flex flex-column align-items-center flex-column-auto py-5 py-lg-12">
      <a (click)="showMenu()">
        <%# <img alt="Logo" src="assets/images/brand/logo.png" class="max-h-45px"> %>
      </a>
    </div>
    <div class="aside-nav d-flex flex-column align-items-center flex-column-fluid py-5 scroll scroll-pull ps"
      style="height: 652px; overflow: hidden;">
      <ul class="nav flex-column">
        <li class="nav-item mb-3">
          <%= link_to root_path, class: "nav-link btn btn-icon btn-clean btn-lg" do %>
            <i class="material-icons">insert_invitation</i>          
          <% end %>  
        </li>
        <li class="nav-item mb-3">
          <%= link_to contracts_path, class: "nav-link btn btn-icon btn-clean btn-lg"  do %>
            <i class="material-icons">description</i>          
            <% end %>
        </li>
        <li class="nav-item mb-3">
          <%= link_to payrolls_path, class: "nav-link btn btn-icon btn-clean btn-l" do %>
            <i class="material-icons">monetization_on</i>          
          <% end %>
        </li>
        <li class="nav-item mb-3">
          <%= link_to reports_path, class: "nav-link btn btn-icon btn-clean btn-lg"  do %>
            <i class="material-icons">equalizer</i>            
          <% end %>         
        </li>
        <% if policy(User).index? %>
          <li class="nav-item mb-3">
            <%= link_to users_path, class: "nav-link btn btn-icon btn-clean btn-l"  do %>
              <i class="material-icons">supervised_user_circle</i>          
            <% end %>         
          </li>
        <% end %>
        <li class="nav-item mb-3">
          <%= link_to doctors_path, class: "nav-link btn btn-icon btn-clean btn-lg"  do %>
            <i class="material-icons">face</i>      
          <% end %>   
        </li>
        <li class="nav-item mb-3">
          <%= link_to offices_path, class: "nav-link btn btn-icon btn-clean btn-lg"  do %>
            <i class="material-icons">apartment</i>          
          <% end %>         
        </li>
        <li class="nav-item mb-3">
          <%= link_to holidays_path, class: "nav-link btn btn-icon btn-clean btn-lg"  do %>
            <i class="material-icons">alarm_off</i>         
          <% end %>         
        </li>
      </ul>
    </div>
    <div class="aside-footer d-flex flex-column align-items-center flex-column-auto py-4 py-lg-10">
      <a href="#" class="btn btn-icon btn-clean btn-lg mb-1 position-relative">
        <i class="fa fa-bell"></i>
      </a>
      <a href="user-profile" class="btn btn-icon btn-clean btn-lg w-40px h-40px">
        <i class="fa fa-user"></i>
      </a>
    </div>
  </div>

  <div class="aside-secondary d-flex flex-row-fluid" data-controller="aside-secondary">
    <div class="aside-workspace scroll scroll-push my-2 ps" style="min-height: 800px; overflow: hidden;">
      <div class="tab-content">
        <div class="tab-pane p-2 fade show active">
          <a routerLink="/settings/office" class="btn btn-primary btn-block font-weight-bold mr-2">
            <i class=""></i>
            <i class="fa fa-plus-circle"></i> Nova Unidade
          </a>
          <hr />
          <a (click)="reservationWithContract()" class="btn btn-primary btn-block font-weight-bold mr-2">
            <i class=""></i>
            <i class="fa fa-plus-circle"></i> Reserva c/ Contrato
          </a>
          <a (click)="reservationWithOutContract()" class="btn btn-primary btn-block font-weight-bold mr-2">
            <i class=""></i>
            <i class="fa fa-plus-circle"></i> Reserva s/ Contrato
          </a>
          <hr />
          <h3 class="p-2 p-lg-4 my-1 my-lg-4"> Unidades </h3>
          <ul class="list list-hover p-2">
            <% current_user.offices.each_with_index do |office, index| %>
              <li class="list-item hoverable p-2 p-lg-3 mb-2">
                <div class="d-flex align-items-center">
                  <label class="checkbox checkbox-lg checkbox-lg flex-shrink-0 mr-4">
                    <input type="checkbox" value="<%= office.id %>" class="chk_all">
                    <input type="hidden" name"office_id" value="<%= index %>">
                    <span></span>
                  </label>
                  <div class="d-flex align-items-center">
                    <div class="d-flex flex-column flex-grow-1 mr-2">
                      <span class="text-dark-75 font-size-h9 mb-0"><%= office.name %></span>
                      <a href="#" onclick="return false;" class="text-muted text-hover-primary font-weight-bold card-toggle">
                        <input type="hidden" name"office_id" value="<%= index %>">
                        <%= office.clinics.count %> salas cadastradas
                      </a>            
                    </div>
                  </div>
                </div>
              </li>
              <li class="list-item hoverable p-2 p-lg-3 mb-2 is-hidden">
                <ul class="list list-hover">
                  <% office.clinics.order("id asc").each do |clinic|%>
                    <li class="list-item hoverable p-2 p-lg-3 mb-2">
                      <div class="d-flex align-items-center">
                        <label class="checkbox checkbox-lg checkbox-lg flex-shrink-0 mr-4">
                          <input type="checkbox" value="<%= clinic.id %>" class="checkbox">
                          <span style="background-color:<%= clinic.color %>"></span>
                        </label>
                        <div class="d-flex align-items-center">
                          <div class="d-flex flex-column flex-grow-1 mr-2">
                            <span class="text-dark-75 font-size-h9 mb-0">Sala <%= clinic.code %></span>                             
                          </div>
                        </div>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
