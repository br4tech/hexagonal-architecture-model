<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= @title %> | Pronto Consult√≥rios</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>    
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>    
  </head>
  <body>
    <div class="container is-fluid is-marginless">
      <%= render 'layouts/partials/sidemenu' %>

      <div class="content" id="main">
        <%= render 'layouts/partials/topbar' %>

        <div class="yield">
          <div class="container is-fluid">
            <% flash.each do |type, message| %>
              <div class="notification <%= flash_style(type) %>">
                <%= message %>
              </div>
            <% end %> 

            <div id="root" data-resource="<%= controller_name %>">
              <%= yield %>
            </div>
          </div>
          
          <div class="pageloader">
            <span class="title">Processando</span>
          </div>   
        </div>
      </div><!-- /.content -->

    </div>
    
    <%= yield :js %>
  </body>
</html>